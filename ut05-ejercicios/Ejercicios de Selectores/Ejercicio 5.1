table {
  border-collapse: collapse;
  width: 100%;
}

thead {
  background-color: #333;
  color: white;
}

tbody tr:nth-child(odd) {
  background-color: #f9f9f9;
}

tbody tr:nth-child(even) {
  background-color: #e0e0e0;
}

tbody tr:hover {
  background-color: #ddd;
}

td:first-child {
  font-weight: bold;
}
